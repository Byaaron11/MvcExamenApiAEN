@model MvcExamenApiAEN.Models.Personaje

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Personaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input type="hidden" asp-for="IdPersonaje" value="@Model.IdPersonaje" class="form-control" />
                
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Nombre" value="@Model.Nombre" class="form-control" />
                
            </div>
            <div class="form-group">
               
                <input type="hidden" asp-for="Imagen" value="@Model.Imagen" class="form-control" />
               
            </div>
            <div class="form-group">
                <label class="control-label">Mover a la serie: </label>
                <input asp-for="IdSerie" value="@Model.IdSerie" class="form-control" />
                <span asp-validation-for="IdSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
